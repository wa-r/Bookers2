<h1>User info</h1>
<table>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "80x80" %></td>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<%= link_to edit_user_path(@user.id) do %>
  <i class="fas fa-user-cog"></i>
<% end %>