<p id="notice">
  <%= notice %>
</p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= render 'users/User-info', user: @user %>
<%= render 'books/New-book', book: @new_book %>

<h1>Book detail</h1>
<table>
  <tr>
    <td>
      <p><%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
        <% end %></p>
      <%= link_to @user.name, user_path(@book.user.id) %>
    </td>
    <td>
      <%= link_to @book.title, book_path(@book.id) %>
    </td>
    <td>
      <%= @book.body %>
    </td>
    <% if current_user.id == @book.user_id %>
      <td>
        <%= link_to "Edit", edit_book_path(@book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book.id), method: :delete %>
      </td>
    <% end %>
  </tr>
</table>