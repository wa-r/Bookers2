<%= render 'users/User-info', user: @user %>
<%= render 'books/New-book', book: @book %>

<h1>Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <!-- エラー部分 -->
        <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>