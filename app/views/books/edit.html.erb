<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>
  <p><strong>Title</strong></p>
  <p><%= f.text_field :title %></p>
  <p><strong>Opinion</strong></p>
  <p><%= f.text_area :body %></p>
  <p><%= f.submit 'Update Book' %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>
